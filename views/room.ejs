    <link rel="stylesheet" href="../bootstrap.min.css" />
    <link rel="stylesheet" href="../custom.css" />
    <script src="../bootstrap.bundle.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    <script>
      const roomId = "<%= roomId %>";
      const user = "<%= user %>";
    </script>
    <script src="../script.js" defer></script>
  </head>
  <body>
    <div class="text-white m-2 mb-0">
      Room: <span id="room-id"><%= roomId %></span>
    </div>
    <div class="d-flex" style="height: 95%">
      <div class="w-75">
        <div
          id="videos-container"
          class="
            w-100
            d-flex
            justify-content-evenly
            align-items-center
            flex-wrap
          "
        ></div>
      </div>
      <div class="w-25">
        <div id="chat-box" class="bg-light p-2" style="height: 90%"></div>
        <div
          class="w-100 d-flex justify-content-center align-items-center py-2"
        >
          <form id="chat-form" class="d-flex" style="width: 100%">
            <input
              type="text"
              name="chat"
              id="chat"
              autocomplete="off"
              class="form-control"
            />
            <button class="btn btn-primary mx-2" type="submit">Send</button>
          </form>
        </div>
      </div>
    </div>
    <div id="task-bar" class="text-light d-flex justify-content-center">
      <div id="mute-btn" class="icon" onclick="toggleMute()">
        <i class="fas fa-microphone-slash fa-2x"></i>
      </div>
      <div id="video-btn" class="icon" onclick="toggleVideo()">
        <i class="fas fa-video-slash fa-2x"></i>
      </div>
      <div class="icon"><i class="fas fa-phone-slash fa-2x"></i></div>
    </div>
  </body>
</html>
