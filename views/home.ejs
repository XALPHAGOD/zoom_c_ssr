<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Zoom_C</title>
    <link rel="stylesheet" href="bootstrap.min.css" />
    <link rel="stylesheet" href="custom.css" />
    <script src="bootstrap.bundle.min.js"></script>
  </head>
  <body class="d-flex flex-column justify-content-center align-items-center">
    <div class="text-white" style="font-size: xx-large">Zoom_C</div>
    <form
      method="POST"
      class="d-flex flex-column align-items-center"
      id="room-form"
    >
      <div style="margin: 10px">
        <input
          type="text"
          name="user"
          id="user"
          class="form-control text-center my-2"
          autocomplete="off"
          placeholder="Username"
          onKeyup="validate()"
        />
        <input
          type="text"
          name="room"
          id="room"
          class="form-control text-center my-2"
          autocomplete="off"
          placeholder="Room-Id"
          value="<%= room %>"
          onKeyup="validate()"
        />
      </div>
      <div class="d-flex">
        <button
          id="create"
          class="btn btn-primary mx-2"
          type="submit"
          disabled="true"
          style="min-width: 90px"
        >
          Create
        </button>
        <button
          id="join"
          class="btn btn-primary mx-2"
          type="submit"
          disabled="true"
          style="min-width: 90px"
        >
          Join
        </button>
      </div>
    </form>
  </body>
  <script>
    function validate() {
      const form = document.getElementById("room-form");
      const user = document.getElementById("user").value;
      const room = document.getElementById("room").value;
      const inputs = document.querySelectorAll("input");
      const buttons = document.querySelectorAll("button");

      form.action = "/" + user;
      if (!(user == "")) buttons[0].disabled = false;
      else buttons[0].disabled = true;

      if (!(user == "" || room == "")) buttons[1].disabled = false;
      else buttons[1].disabled = true;
    }
  </script>
</html>
